<style type="text/css">
    .tg  {border-collapse:collapse;border-spacing:0;}
    .tg td{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
        overflow:hidden;padding:10px 5px;word-break:normal;}
    .tg th{border-color:black;border-style:solid;border-width:1px;font-family:Arial, sans-serif;font-size:14px;
        font-weight:normal;overflow:hidden;padding:10px 5px;word-break:normal;}
    .tg .tg-0pky{border-color:inherit;text-align:left;vertical-align:top}
    .tg .tg-0lax{text-align:left;vertical-align:top}
</style>

<h1><%= @recipe.name %></h1>

<%#= render "form", recipedetail: @recipedetail %>

<br>

<table class="tg">
  <thead>
  <tr>
    <th class="tg-0pky">Продукт</th>
    <th class="tg-0pky">Од. Виміру</th>
    <th class="tg-0pky">Кількість</th>
    <th class="tg-0pky">Дія</th>
  </tr>
  </thead>
  <tbody>
  <% @recipedetail.each do |rd| %>
    <tr>
      <td class="tg-0lax"><%= Article.find(rd.article_id).name %></td>
      <td class="tg-0lax"><%= Article.find(rd.article_id).unit %></td>
      <td class="tg-0lax"><%= rd.amount %></td>
      <!--      <td class="tg-0lax"> <%#= button_to 'Видалити', recipedetail_path(rd), method: :delete, params: { aid: rd.article_id, rid: rd.recipe_id  } %> </td>-->
      <td class="tg-0lax"> <%= button_to 'Видалити', recipedetail_path(rd), method: :delete %> </td>
      <%#= button_to 'Destroy', article_path(@article), method: :delete %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= form_with url: recipedetails_path, model: @recipedetails do |form| %>
  <div>
    <%= form.label :amount %><br>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :article_id %><br>
    <%= form.collection_select :article_id, Article.order(:name), :id, :name %>
  </div>

  <div hidden>
    <%= form.label :recipe_id %>
    <%#= form.collection_select :recipe_id, Recipe.order(:name), :id, :name, {:selected => @recipe.id}, {:disabled => "true"}  %>
    <%= form.collection_select :recipe_id, Recipe.order(:name), :id, :name, {:selected => @recipe.id}  %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<br>

<br>
<%= link_to "Back", recipes_path %>
<br>
<%= link_to "Home", articles_path %>
