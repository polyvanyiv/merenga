<%=form_with model: recipedetail do |form| %>
  <div>
    <%= form.label :amount %><br>
    <%= form.text_field :amount %>
  </div>

  <div>
    <%= form.label :recipe_id %><br>
    <%= form.collection_select :recipe_id, Recipe.order(:name), :id, :name %>
  </div>

  <div>
    <%= form.label :article_id %><br>
    <%= form.collection_select :article_id, Article.order(:name), :id, :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<%end %>
